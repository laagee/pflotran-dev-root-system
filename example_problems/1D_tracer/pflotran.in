#Description: 1D test problem for tracer transport

CHEMISTRY
PRIMARY_SPECIES
Tracer
/
/

GRID
TYPE structured
ORIGIN 0.d0 0.d0 0.d0
NXYZ 1000 1 1
BOUNDS
0.d0 1.d0
0.d0 1.d0
0.d0 1.d0
/
END

LINEAR_SOLVER FLOW
#PC_TYPE LU
#KSP_TYPE PREONLY
END

LINEAR_SOLVER TRANSPORT
#PC_TYPE LU
#KSP_TYPE PREONLY
END

NEWTON_SOLVER TRANSPORT
MATRIX_TYPE AIJ
PRECONDITIONER_MATRIX_TYPE AIJ
END

UNIFORM_VELOCITY 7.9274479960d-9 0.d0 0.d0

FLUID_PROPERTY
DIFFUSION_COEFFICIENT 1.d-9
/

MATERIAL_PROPERTY soil1
ID 1
POROSITY 0.25d0
TORTUOSITY 1.d0
LONGITUDINAL_DISPERSIVITY 3.1536d0
SATURATION_FUNCTION default
/

SATURATION_FUNCTION default
/

OUTPUT
TIMES y 0.25d0 0.5d0 0.75d0 2.d0
SCREEN PERIODIC 10
PERIODIC_OBSERVATION TIMESTEP 1
FORMAT TECPLOT POINT
#VELOCITIES
/

TIME
FINAL_TIME 1.d0 y
INITIAL_TIMESTEP_SIZE 1.d-6 y
MAXIMUM_TIMESTEP_SIZE 1.d-2 y
/

REGION all
COORDINATES
0.d0 0.d0 0.d0
1.d0 1.d0 1.d0
/
END

REGION west
FACE WEST
COORDINATES
0.d0 0.d0 0.d0
0.d0 1.d0 1.d0
/
END

REGION east
FACE EAST
COORDINATES
1.d0 0.d0 0.d0
1.d0 1.d0 1.d0
/
END

OBSERVATION 
REGION east
#VELOCITY
/

TRANSPORT_CONDITION west
TYPE dirichlet
CONSTRAINT_LIST
0.d0 west
/
END

TRANSPORT_CONDITION initial
TYPE zero_gradient
CONSTRAINT_LIST
0.d0 initial
/
END

CONSTRAINT west
CONCENTRATIONS
Tracer 1.d0 T
/
END

CONSTRAINT initial
CONCENTRATIONS
Tracer 1.d-8 T
/
END

# initial condition
INITIAL_CONDITION
TRANSPORT_CONDITION initial
REGION all
END

# west boundary condition
BOUNDARY_CONDITION
TRANSPORT_CONDITION west
REGION west
END

# east boundary condition
BOUNDARY_CONDITION
TRANSPORT_CONDITION initial
REGION east
END

STRATA
REGION all
MATERIAL soil1
END

