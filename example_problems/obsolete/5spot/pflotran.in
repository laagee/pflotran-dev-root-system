#Description: 3D 5 spot problem for testing geochemistry

MODE RICHARDS

CHEMISTRY
PRIMARY_SPECIES
H+
HCO3-
Ca+2
END
SECONDARY_SPECIES
OH-
CO2(aq)
CO3-2
CaHCO3-
CaCO3(aq)
END
MINERALS
Calcite
END
END

#NUMERICAL_JACOBIAN
#INEXACT_NEWTON
#
#CHECKPOINT 50
#WALLCLOCK_STOP 0.05
#
DEBUG
#MATVIEW_JACOBIAN
#VECVIEW_RESIDUAL
END
#
GRID
TYPE structured
NXYZ 25 25 10
END
#
NEWTON_SOLVER
#RTOL 1.d-8
ATOL 1.d-6
NO_INFINITY_NORM
#NO_PRINT_CONVERGENCE
#PRINT_DETAILED_CONVERGENCE
END
#
LINEAR_SOLVER
#KSP_TYPE PREONLY
#PC_TYPE LU
END
#
#STATISTICS
#
HDF5 VELO !FLUX
TECP VELO !FLUX
#
DXYZ
4.
4.
1.
#
DIFF  1.D-9       12.6
#
# Richards Equation Pref
RICH 101325.
#
SATURATION_FUNCTIONS
#id itype swir   lambda alpha     pcwmax betac pwr
 1  2     0.10   2.67   2.042d-4  1.e8   0.d0  1.d0
END

THERMAL_PROPERTIES
#ithm rho    cpr     ckdry cksat tau cdiff   cexp
  1   2.75e3 1000.e0 0.5   0.5   0.5 2.13d-5 1.8
END
#
MATERIALS
#name   id icap ithm por  tau permx     permy     permz     permpwr
Soil1   1  1    1    0.25 0.5 1.d-12    1.d-12    1.d-13    1.d0
END
#
TIME d 
.001 .01 .1 1. 10. 100. 1000.
#
DTST 1.d-6
100. 10.0d0 \
1000. 100.0d0
#
REGION all
BLOCK 1 25 1 25 1 10
END

REGION SW
BLOCK 1 1 1 1 3 8
END

REGION NE
BLOCK 25 25 25 25 3 8
END

CONDITION Inlet
CLASS flow
TYPE
PRESSURE mass
END
PRESSURE 1.d-1
END

CONDITION Outlet
CLASS flow
TYPE
PRESSURE mass
END
PRESSURE -1.d-1
END

CONDITION initial
CLASS flow
TYPE
PRESSURE hydrostatic
END
DATUM 0.d0 0.d0 10.d0
PRESSURE 201325.d0
END

CONDITION Inlet_c
CLASS transport
TYPE
CONCENTRATION H+ concentration
CONCENTRATION HCO3- concentration
CONCENTRATION Ca+2 concentration
END
CONCENTRATION H+ 1.d-5
CONCENTRATION HCO3- 1.d-3
CONCENTRATION Ca+2 1.d-12
END

CONDITION initial_c
CLASS transport
TYPE
CONCENTRATION H+ concentration
CONCENTRATION HCO3- concentration
CONCENTRATION Ca+2 concentration
END
CONCENTRATION H+ 1.416772d-10
CONCENTRATION HCO3- 1.d-3
CONCENTRATION Ca+2 1.d-5
END

SOURCE_SINK
FLOW_CONDITION Inlet
TRANSPORT_CONDITION Inlet_c
REGION SW
END

SOURCE_SINK
FLOW_CONDITION Outlet
TRANSPORT_CONDITION initial_c
REGION NE
END

INITIAL_CONDITION
FLOW_CONDITION initial
TRANSPORT_CONDITION initial_c
REGION all
END

STRATA
MATERIAL Soil1
REGION all
END

