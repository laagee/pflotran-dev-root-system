#Description: surface flow decoupled from subsurface flow

#=========================== flow mode ========================================
MODE RICHARDS

#=========================== discretization ===================================
GRID
  TYPE unstructured sloping_plane_400X_320Y_80dx_80dy_0.2000dz_0.0005slope.h5
END

#=========================== timestepper =================================
TIMESTEPPER FLOW
  PRESSURE_DAMPENING_FACTOR 0.1
  MAX_PRESSURE_CHANGE 1.d4
  TS_ACCELERATION 20
END

NEWTON_SOLVER FLOW
  ITOL 1.d-8
  STOL 1.d-30
  ITOL_UPDATE 1.d0
  MAXIT 50
END

#=========================== fluid properties =================================
FLUID_PROPERTY
  DIFFUSION_COEFFICIENT 1.d-9
END

#=========================== material properties ==============================
MATERIAL_PROPERTY soil1
  ID 1
  POROSITY 0.40d0
  TORTUOSITY 0.5d0
  SATURATION_FUNCTION sf1
  PERMEABILITY
    PERM_X 1.171d-13
    PERM_Y 1.171d-13
    PERM_Z 1.171d-13
  /
END

#=========================== saturation functions =============================
SATURATION_FUNCTION sf1
  SATURATION_FUNCTION_TYPE VAN_GENUCHTEN
  RESIDUAL_SATURATION 0.2d0
  LAMBDA 0.5d0
  ALPHA 1.0194d-04
  MAX_CAPILLARY_PRESSURE 1.d8
END

#=========================== times ============================================
TIME
  #FINAL_TIME 18000.d0 s
  FINAL_TIME 120.d0 s
  INITIAL_TIMESTEP_SIZE 60.0 s
  MAXIMUM_TIMESTEP_SIZE 60.0 s
END

#=========================== regions ==========================================
REGION all
  COORDINATES
    0.d0 0.d0 -1.d0
    420.d0 320.d0 5.d0
  /
END 

REGION top
  FILE sloping_plane_400X_320Y_80dx_80dy_0.2000dz_0.0005slope.h5
  GRID unstructured
END

#=========================== flow conditions ==================================
FLOW_CONDITION initial
  TYPE
    PRESSURE hydrostatic
  /
  INTERPOLATION linear
  DATUM 0.d0 0.d0 6.0d0
  GRADIENT
    PRESSURE -0.0005 0.0 0.0
  /
  PRESSURE 101325.d0
END

FLOW_CONDITION from_surface
  TYPE
    RATE heterogeneous_mass_rate
  /
  RATE 0d-6
END

#=========================== condition couplers ===============================
# initial condition
INITIAL_CONDITION initial_copuler
  FLOW_CONDITION initial
  REGION all
END

SOURCE_SINK from_surface_ss
  FLOW_CONDITION from_surface
  REGION top
END

#=========================== stratigraphy couplers ============================
STRATA
  REGION all
  MATERIAL soil1
END

#===============================================================================
#=========================== surface flow ======================================
#===============================================================================
SURFACE_FLOW

SURF_GRID
  TYPE unstructured sloping_plane_400X_320Y_80dx_80dy_0.2000dz_0.0005slope.h5
END

SURF_FLOW_FORMULATION diffusive

SURF_SUBSURFACE_COUPLING
  decoupled
END

SURF_MATERIAL_PROPERTY surf1
  ID 1
  MANNINGS 0.02
END

SURF_TIME
  INITIAL_TIMESTEP_SIZE 60.0 s
  MAXIMUM_TIMESTEP_SIZE 60.0 s
END

#=========================== output ==========================================
#SURF_OUTPUT
#  PERIODIC TIME 60 s
#  HYDROGRAPH
#END

#=========================== regions ==========================================
SURF_REGION surf_all
  COORDINATES
    0.d0 0.d0 0.d0
    400.d0 320.d0 100.d0
  /
END 

SURF_REGION surf_east
  FILE sloping_plane_400X_320Y_80dx_80dy_0.2000dz_0.0005slope.h5
  GRID unstructured
END

#=========================== flow conditions ==========================================
SURF_FLOW_CONDITION rain
  TYPE
    RATE volumetric_rate
  /
  RATE LIST
    TIME_UNITS sec
    DATA_UNITS m/sec
    0.d0 5.5d-6
    12000.d0 0.d0
  /
END

SURF_FLOW_CONDITION surf_initial
  TYPE
    PRESSURE hydrostatic
  /
  INTERPOLATION linear
  DATUM 0.d0 0.d0 1.0d0
  PRESSURE 111325.d0
END

SURF_FLOW_CONDITION outflow
  TYPE
    PRESSURE zero_gradient
  /
  PRESSURE 101325.d0
END

SURF_FLOW_CONDITION from_subsurface
  TYPE
    RATE heterogeneous_volumetric_rate
  /
  RATE 0d-6
END

#=========================== condition couplers ===============================
# source condition
SURF_SOURCE_SINK rain_on_top_surface
  SURF_FLOW_CONDITION rain
  SURF_REGION surf_all
/

# initial condition
SURF_INITIAL_CONDITION surf_initial_coupler
  FLOW_CONDITION surf_initial
  REGION surf_all
END

SURF_BOUNDARY_CONDITION surf_east_bc
  SURF_FLOW_CONDITION outflow
  SURF_REGION surf_east
END

SURF_SOURCE_SINK from_subsurface_ss
  SURF_FLOW_CONDITION from_subsurface
  REGION surf_all
END


#=========================== stratigraphy couplers ============================
STRATA
  SURF_REGION surf_all
  MATERIAL surf1
END

END
